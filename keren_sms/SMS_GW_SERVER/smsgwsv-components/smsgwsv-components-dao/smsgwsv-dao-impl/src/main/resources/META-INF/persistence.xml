<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="smsgw" transaction-type="JTA">
    <jta-data-source>java:/CRMDS</jta-data-source>
    <class>com.megatimgroup.smsgw.model.referentiel.Client</class>
    <class>com.megatimgroup.smsgw.model.referentiel.Product</class>
    <class>com.megatimgroup.smsgw.model.referentiel.Order</class>
    <class>com.megatimgroup.smsgw.model.referentiel.ProductOrder</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
